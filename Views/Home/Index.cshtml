@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<TechnicalTestStevesBlind.Models.Person>
    

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dob)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var info in Model)
                {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => info.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => info.Dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => info.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => info.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => info.State)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@info.Id">Edit</a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@info.Id">Delete</a>
                    </td>
                    
                </tr>
                }
            </tbody>
            </table>
        <form asp-action="Add" asp-controller="Home" method="post">
            Name: <input type="text" placeholder="Full Name" required />

            DOB: <input type="datetime"placeholder="DOB" required />

            Gender: <input type="text"  placeholder="Gender" required />

            Country: <input type="text" placeholder="Country" required />

            State: <input type="text" placeholder="State" required />
            <input type="submit" value="Add New" />
        </form>
